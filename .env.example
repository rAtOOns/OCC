# OCC Data Fetcher Configuration
# Copy this file to .env and fill in your values
# Then source it before running fetch_data.py: source .env && python3 fetch_data.py

# ============================================================================
# ServiceNow Configuration
# ============================================================================
export SNOW_ENABLED=false
export SNOW_URL=https://your-instance.service-now.com/api/now/table/incident
export SNOW_USER=your_username
export SNOW_PASS=your_password

# ============================================================================
# BUMS (Unix Monitoring System) Configuration
# ============================================================================
export BUMS_ENABLED=false
export BUMS_URL=http://your-bums-server/status
export BUMS_USER=your_username
export BUMS_PASS=your_password

# ============================================================================
# SolarWinds Configuration
# ============================================================================
export SOLARWINDS_ENABLED=false
export SOLARWINDS_URL=https://your-solarwinds:17778/SolarWinds/InformationService/v3/Json/Query
export SOLARWINDS_USER=your_username
export SOLARWINDS_PASS=your_password

# ============================================================================
# AAP (Ansible Automation Platform) Configuration
# ============================================================================
export AAP_ENABLED=false
export AAP_URL=https://your-aap-server/api/v2/jobs/
export AAP_TOKEN=your_api_token

# ============================================================================
# Audit Report Configuration
# ============================================================================
export AUDIT_ENABLED=false
export AUDIT_URL=http://your-audit-server/report
export AUDIT_USER=your_username
export AUDIT_PASS=your_password

# ============================================================================
# Tenable Configuration
# ============================================================================
export TENABLE_ENABLED=false
export TENABLE_URL=https://your-tenable-server/rest/analysis
export TENABLE_ACCESS_KEY=your_access_key
export TENABLE_SECRET_KEY=your_secret_key

# ============================================================================
# SSL Configuration
# Set to true if using valid SSL certificates (recommended for production)
# ============================================================================
export VERIFY_SSL=false
